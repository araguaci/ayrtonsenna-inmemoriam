---
const { title, subtitle } = Astro.props;
---

<div class="flex">
  <div class="education__time">
    <span class="w-4 h-4 bg-[#246249] block rounded-full mt-1 outline outline-2"></span>
    <span class="education__line bg-[#246249] block h-full w-[2px] translate-x-[6px]"></span>
  </div>
  <div class="experience__data bd-grid px-5">
    <h3 class="font-semibold mb-1 text-base">{title}</h3>
    <span class="font-semibold text-base text-[#246249]">{subtitle}</span>
    <p class="my-2 text-justify">
      <slot />
    </p>
  </div>
</div>
